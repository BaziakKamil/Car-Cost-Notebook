<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/add"
        android:tint="@color/fab_icon_color"
        android:visibility="gone"
        app:icon="@drawable/ic_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_odometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:tint="@color/fab_icon_color"
        android:visibility="gone"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/fab_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_odometer"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_add_odometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/odometer_reading"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/fab_add_odometer"
        app:layout_constraintEnd_toStartOf="@+id/fab_add_odometer"
        app:layout_constraintTop_toTopOf="@+id/fab_add_odometer"
        tools:visibility="visible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_maintenance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:tint="@color/fab_icon_color"
        android:visibility="gone"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/fab_add_odometer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/fab_add_odometer"
        app:srcCompat="@drawable/ic_maintenance"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_maintenance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/maintenance"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/fab_add_maintenance"
        app:layout_constraintEnd_toStartOf="@+id/fab_add_maintenance"
        app:layout_constraintTop_toTopOf="@+id/fab_add_maintenance"
        tools:visibility="visible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_petrol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:tint="@color/fab_icon_color"
        android:visibility="gone"
        app:fabSize="mini"
        app:layout_constraintBottom_toTopOf="@+id/fab_add_maintenance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/fab_add_maintenance"
        app:srcCompat="@drawable/ic_petrol"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/text_petrol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="@string/petrol_fill"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/fab_add_petrol"
        app:layout_constraintEnd_toStartOf="@+id/fab_add_petrol"
        app:layout_constraintTop_toTopOf="@+id/fab_add_petrol"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>