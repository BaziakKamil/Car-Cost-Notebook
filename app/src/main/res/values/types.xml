<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonShape" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="CustomButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/ButtonShape</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="strokeColor">@color/icons_background_color</item>
    </style>

    <style name="TextApperance16" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextTitle">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextBody1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="TextCaption" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:lineSpacingExtra">6sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_caption_color</item>
    </style>

</resources>